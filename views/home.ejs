<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          animation: {
            'fade-in-up': 'fadeInUp 0.6s ease-out',
            'fade-in-down': 'fadeInDown 0.6s ease-out',
            'fade-in-left': 'fadeInLeft 0.6s ease-out',
            'fade-in-right': 'fadeInRight 0.6s ease-out',
            'float': 'float 3s ease-in-out infinite',
            'glow': 'glow 2s ease-in-out infinite alternate',
            'gradient-x': 'gradientX 3s ease infinite',
            'gradient-y': 'gradientY 3s ease infinite',
            'gradient-xy': 'gradientXY 3s ease infinite',
            'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
            'bounce-slow': 'bounce 2s infinite',
          },
          keyframes: {
            fadeInUp: {
              '0%': { opacity: '0', transform: 'translateY(30px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' }
            },
            fadeInDown: {
              '0%': { opacity: '0', transform: 'translateY(-30px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' }
            },
            fadeInLeft: {
              '0%': { opacity: '0', transform: 'translateX(-30px)' },
              '100%': { opacity: '1', transform: 'translateX(0)' }
            },
            fadeInRight: {
              '0%': { opacity: '0', transform: 'translateX(30px)' },
              '100%': { opacity: '1', transform: 'translateX(0)' }
            },
            float: {
              '0%, 100%': { transform: 'translateY(0px)' },
              '50%': { transform: 'translateY(-10px)' }
            },
            glow: {
              '0%': { boxShadow: '0 0 20px rgba(59, 130, 246, 0.5)' },
              '100%': { boxShadow: '0 0 30px rgba(59, 130, 246, 0.8)' }
            },
            gradientX: {
              '0%, 100%': { backgroundPosition: '0% 50%' },
              '50%': { backgroundPosition: '100% 50%' }
            },
            gradientY: {
              '0%, 100%': { backgroundPosition: '50% 0%' },
              '50%': { backgroundPosition: '50% 100%' }
            },
            gradientXY: {
              '0%, 100%': { backgroundPosition: '0% 50%' },
              '25%': { backgroundPosition: '100% 50%' },
              '50%': { backgroundPosition: '100% 100%' },
              '75%': { backgroundPosition: '0% 100%' }
            }
          }
        }
      }
    }
  </script>
  <style>
    .gradient-mesh {
      background: linear-gradient(-45deg, #e3f2fd, #f3e5f5, #e8f5e8, #fff3e0, #fce4ec);
      background-size: 400% 400%;
      animation: gradientXY 8s ease infinite;
    }
    
    .card-hover {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .card-hover:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
    
    .btn-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transition: all 0.3s ease;
    }
    
    .btn-gradient:hover {
      background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
    }
    
    .btn-gradient-success {
      background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
    }
    
    .btn-gradient-success:hover {
      background: linear-gradient(135deg, #22c55e 0%, #4ade80 100%);
      box-shadow: 0 10px 20px rgba(74, 222, 128, 0.4);
    }
    
    .text-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .bg-glass {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.18);
    }
    
    .animate-on-scroll {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .animate-on-scroll.show {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
</head>
<body class="gradient-mesh min-h-screen">
  <!-- Navigation -->
  <nav class="bg-glass border-b border-white/20 sticky top-0 z-50 animate-fade-in-down">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold text-gradient hover:scale-105 transition-transform duration-300">
            Markdown Blog
          </a>
        </div>
        <div class="flex items-center gap-3">
          <% if (currentUser) { %>
            <span class="text-slate-600 bg-white/40 px-3 py-1 rounded-full text-sm backdrop-blur-sm">
              Signed in as <strong class="text-slate-800"><%= currentUser.email %></strong>
            </span>
            <form action="/auth/logout" method="POST" class="inline">
              <button class="bg-slate-100/80 hover:bg-slate-200/80 text-slate-700 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105 backdrop-blur-sm" type="submit">
                Logout
              </button>
            </form>
          <% } else { %>
            <a href="/auth/login" class="text-slate-700 hover:text-slate-900 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:bg-white/30">
              Login
            </a>
            <a href="/auth/signup" class="btn-gradient text-white px-6 py-2 rounded-lg text-sm font-medium">
              Sign Up
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16 animate-fade-in-up">
      <div class="relative">
        <h1 class="text-6xl md:text-7xl font-bold mb-6 animate-float">
          <span class="text-gradient">Welcome to</span>
          <br>
          <span class="bg-gradient-to-r from-slate-800 to-slate-600 bg-clip-text text-transparent">Markdown Blog</span>
        </h1>
        <div class="absolute -top-4 -left-4 w-24 h-24 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full opacity-20 animate-pulse-slow"></div>
        <div class="absolute -bottom-4 -right-4 w-16 h-16 bg-gradient-to-r from-pink-400 to-red-500 rounded-full opacity-20 animate-bounce-slow"></div>
      </div>
      
      <p class="text-xl text-slate-600 mb-8 max-w-2xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s">
        Write in Markdown, publish beautifully rendered posts with professional styling and smooth animations.
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12 animate-fade-in-up" style="animation-delay: 0.4s">
        <a href="/articles" class="bg-slate-800 hover:bg-slate-700 text-white px-8 py-4 rounded-xl text-lg font-medium transition-all duration-300 hover:scale-105 hover:shadow-2xl">
          View Articles
        </a>
        <% if (currentUser) { %>
          <a href="/articles/new" class="btn-gradient-success text-white px-8 py-4 rounded-xl text-lg font-medium">
            New Article
          </a>
        <% } %>
      </div>

      <% if (!currentUser) { %>
        <!-- Special animated Get Started feature box -->
        <div class="relative max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 0.6s">
          <!-- soft glowing backdrop -->
          <div class="absolute -inset-1 rounded-3xl bg-gradient-to-r from-indigo-400 via-fuchsia-400 to-emerald-400 opacity-40 blur-3xl animate-pulse-slow"></div>

          <div class="relative rounded-3xl bg-white/30 backdrop-blur-xl border border-white/40 p-8 md:p-10 shadow-2xl transform transition-all duration-500 hover:scale-105 hover:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)]">
            <div class="flex items-center justify-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-violet-500 to-indigo-500 text-white flex items-center justify-center animate-float">âœ¨</div>
              <span class="uppercase tracking-wide text-sm text-slate-700">Get Started Today</span>
            </div>

            <h3 class="text-2xl md:text-3xl font-extrabold text-slate-800 mb-3">Bring your ideas to life</h3>
            <p class="text-slate-600 mb-6">Create an account and start publishing beautiful Markdown articles in seconds.</p>

            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <a href="/auth/login" class="text-slate-700 bg-white/70 hover:bg-white px-7 py-3 rounded-xl font-medium transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg">
                Login
              </a>
              <a href="/auth/signup" class="btn-gradient text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-2xl">
                Sign Up
              </a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    
    <!-- How it Works Section -->
    <div class="mb-16 animate-on-scroll">
      <h2 class="text-4xl font-bold text-center mb-12 text-slate-800">How it works</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-glass rounded-2xl p-8 shadow-xl card-hover animate-fade-in-left">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center mb-6 mx-auto animate-float">
            <span class="text-white font-bold text-2xl">1</span>
          </div>
          <h5 class="text-xl font-semibold mb-4 text-center text-slate-800">Sign up or log in</h5>
          <p class="text-slate-600 mb-6 text-center leading-relaxed">Create an account or log in to start writing. This lets you create, edit, and delete your own posts.</p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a href="/auth/login" class="text-slate-700 bg-white/60 hover:bg-white/80 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105 text-center backdrop-blur-sm">Login</a>
            <a href="/auth/signup" class="btn-gradient text-white px-4 py-2 rounded-lg text-sm font-medium text-center">Sign Up</a>
          </div>
        </div>
        
        <div class="bg-glass rounded-2xl p-8 shadow-xl card-hover animate-fade-in-up" style="animation-delay: 0.2s">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 mx-auto animate-float" style="animation-delay: 0.5s">
            <span class="text-white font-bold text-2xl">2</span>
          </div>
          <h5 class="text-xl font-semibold mb-4 text-center text-slate-800">Create a new article</h5>
          <p class="text-slate-600 mb-6 text-center leading-relaxed">Use the editor to add a title, description, and Markdown content. Your content is safely sanitized and rendered as HTML.</p>
          <div class="text-center">
            <a href="/articles/new" class="btn-gradient-success text-white px-6 py-2 rounded-lg text-sm font-medium inline-block">New Article</a>
          </div>
        </div>
        
        <div class="bg-glass rounded-2xl p-8 shadow-xl card-hover animate-fade-in-right" style="animation-delay: 0.4s">
          <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-600 rounded-2xl flex items-center justify-center mb-6 mx-auto animate-float" style="animation-delay: 1s">
            <span class="text-white font-bold text-2xl">3</span>
          </div>
          <h5 class="text-xl font-semibold mb-4 text-center text-slate-800">Publish and share</h5>
          <p class="text-slate-600 mb-6 text-center leading-relaxed">Each post gets a friendly URL (slug). Share the link and manage your posts anytime.</p>
          <div class="text-center">
            <a href="/articles" class="bg-slate-800 hover:bg-slate-700 text-white px-6 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105 inline-block">View Articles</a>
          </div>
        </div>
      </div>
    </div>

    <!-- About Section -->
    <div class="animate-on-scroll">
      <h2 class="text-4xl font-bold text-center mb-12 text-slate-800">About this website</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-glass rounded-2xl p-8 shadow-xl card-hover animate-fade-in-left">
          <div class="w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center mb-6 animate-glow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h5 class="text-xl font-semibold mb-4 text-slate-800">Markdown-powered writing</h5>
          <p class="text-slate-600 mb-4 leading-relaxed">Write posts using Markdown syntax. We convert it to clean, sanitized HTML so your content looks great and stays secure.</p>
          <ul class="text-slate-600 space-y-2">
            <li class="flex items-center">
              <div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mr-3"></div>
              Supports headings, lists, links, code blocks, and more
            </li>
            <li class="flex items-center">
              <div class="w-2 h-2 bg-gradient-to-r from-green-500 to-teal-600 rounded-full mr-3"></div>
              Automatic sanitization to prevent unsafe HTML
            </li>
          </ul>
        </div>
        
        <div class="bg-glass rounded-2xl p-8 shadow-xl card-hover animate-fade-in-right">
          <div class="w-16 h-16 bg-gradient-to-r from-emerald-500 to-cyan-600 rounded-2xl flex items-center justify-center mb-6 animate-pulse-slow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h5 class="text-xl font-semibold mb-4 text-slate-800">Built with Node.js + MongoDB</h5>
          <p class="text-slate-600 mb-4 leading-relaxed">This app uses Express, Mongoose, and EJS. Sessions are stored in MongoDB so you stay signed in securely.</p>
          <ul class="text-slate-600 space-y-2">
            <li class="flex items-center">
              <div class="w-2 h-2 bg-gradient-to-r from-orange-500 to-red-600 rounded-full mr-3"></div>
              Express routes and EJS server-rendered pages
            </li>
            <li class="flex items-center">
              <div class="w-2 h-2 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full mr-3"></div>
              MongoDB for users and articles, with slugs for friendly URLs
            </li>
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Floating Elements -->
    <div class="fixed top-1/4 left-4 w-3 h-3 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full opacity-30 animate-bounce-slow"></div>
    <div class="fixed top-1/3 right-8 w-2 h-2 bg-gradient-to-r from-pink-400 to-red-500 rounded-full opacity-40 animate-pulse-slow"></div>
    <div class="fixed bottom-1/4 left-1/4 w-4 h-4 bg-gradient-to-r from-green-400 to-blue-500 rounded-full opacity-25 animate-float"></div>
    <div class="fixed bottom-1/3 right-1/3 w-2 h-2 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full opacity-35 animate-bounce-slow" style="animation-delay: 1s"></div>
  </div>

  <%- include('partials/bottom-nav') %>

  <script>
    // Animate elements on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
        }
      });
    }, observerOptions);

    // Observe all elements with animate-on-scroll class
    document.querySelectorAll('.animate-on-scroll').forEach(el => {
      observer.observe(el);
    });

    // Add stagger animation to cards
    const cards = document.querySelectorAll('.card-hover');
    cards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.1}s`;
    });
  </script>
</body>
</html>