<div class="fixed bottom-4 left-1/2 -translate-x-1/2 bg-white/80 backdrop-blur border border-white/50 shadow-lg rounded-2xl px-6 py-3 flex items-center gap-6 z-50">
  <a href="/articles" class="text-slate-700 hover:text-slate-900">Blogs</a>
  <% if (currentUser) { %>
    <a href="/profile" class="text-slate-700 hover:text-slate-900">Profile</a>
    <form action="/auth/logout" method="POST" class="inline">
      <button class="text-slate-500 hover:text-slate-800" type="submit">Logout</button>
    </form>
  <% } else { %>
    <a href="/auth/login" class="text-slate-700 hover:text-slate-900">Login</a>
    <a href="/auth/signup" class="text-slate-700 hover:text-slate-900">Sign Up</a>
  <% } %>
</div>
